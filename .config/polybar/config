;
; Spotify
;

[module/spotify]
type = custom/script
tail = true
format-prefix = 阮
format = <label>
exec = python3 ~/.config/polybar/scroll_spotify_status.sh -f '{artist}: {song}'

;
; Spotify Preview
;

[module/spotify-prev]
type = custom/script
exec = echo "<previous-song-symbol>"
format = <label>
click-left = playerctl previous spotify

;
; Spotify Play-Pause
;

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo "<playing-symbol>"
hook-1 = echo "<pause-symbol>"
initial = 1
click-left = playerctl play-pause spotify

;
; Spotify Next
;

[module/spotify-next]
type = custom/script
exec = echo "next-song-symbol"
format = <label>
click-left = playerctl next spotify
