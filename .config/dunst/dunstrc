[global]
    follow = mouse
    geometry = "300x30-5+60"
    indicate_hidden = yes
    shrink = no
    transparency = 0
    notification_height = 0
    separator_height = 2
    padding = 14
    horizontal_padding = 8
    frame_width = 1
    frame_color = "#282828"
    corner_radius = 10
    sort = yes
    idle_threshold = 0

    font = OpenSans 14
    line-height = 0
    markup = full
    # Message format:
    # %a - appname
    # %s - summary
    # %b - body
    # %i - iconname (with path)
    # %I - iconname (without path)
    # %p - progress value (if set)
    # %n - progress value no extra characters
    # %% - literal %
    format = "<b>%a</b>\n%s\n%b"
    alignment = center
    vertical_alignment = center
    show_age_threshold = -1
    word_wrap = no
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = true
    show_indicators = no
   
    icon_position = off

    history_length = 5
    
    browser = /usr/bin/brave -new-tab
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    verbosity = mesg
    ignore_dbusclose = false

    mouse_left_click = close_current
    mouse_middle_click = do_action
    mouse_right_click = do_action

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space

[urgency_normal]
    background = "#282828"
    foreground = "#569cd6"
    timeout = 5

[urgency_critical]
    background = "#ffffff"
    foreground = "#db0101"
    timeout = 0
